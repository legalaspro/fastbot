{
  "name": "Fastbot Dev (Simple)",

  // Pre-built image - build once with:
  //   docker build -t fastbot-dev .devcontainer/dev/
  "image": "legalaspro/fastbot:fastbot-ros2-devcontainer",

  // Docker resource limits (increase if buffer overflow issues occur)
  "runArgs": ["--memory=8g", "--memory-swap=8g", "--shm-size=512m"],

  // Workspace mount
  "workspaceMount": "source=${localWorkspaceFolder},target=/ros2_ws/src,type=bind",
  "workspaceFolder": "/ros2_ws/src",

  // Desktop-lite provides VNC + noVNC for GUI (works on Mac/Windows/Linux)
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "password": "vscode",
      "webPort": "6080",
      "vncPort": "5901"
    }
    // "ghcr.io/devcontainers/features/node:1": {}
  },

  // Forward ports for webapp development
  "forwardPorts": [6080, 5901, 9090, 8000, 11315],
  "portsAttributes": {
    "6080": {
      "label": "noVNC Desktop (Browser)",
      "onAutoForward": "openBrowser"
    },
    "5901": {
      "label": "VNC Direct"
    },
    "9090": {
      "label": "ROSBridge WebSocket",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "WebApp HTTP Server",
      "onAutoForward": "openBrowser"
    },
    "11315": {
      "label": "Web Video Server",
      "onAutoForward": "notify"
    }
  },

  // VS Code extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-iot.vscode-ros",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
        "twxs.cmake",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.suggest.enabled": false,
        "python.autoComplete.extraPaths": [
          "/opt/ros/humble/lib/python3.10/site-packages",
          "/ros2_ws/install/fastbot_description/lib/python3.10/site-packages",
          "/ros2_ws/install/fastbot_slam/lib/python3.10/site-packages"
        ],
        "ros.rosSetupScript": ""
      }
    }
  },

  // Build all packages (full development environment) and install webapp dependencies
  "postCreateCommand": "bash -c 'cd /ros2_ws && source /opt/ros/humble/setup.bash && colcon build --symlink-install && cd /ros2_ws/src/fastbot_webapp && npm install'",

  // Start VNC on container start
  "postStartCommand": "/usr/local/share/desktop-init.sh"
}
